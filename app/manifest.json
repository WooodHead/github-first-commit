{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.1.0",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon.png",
      "38": "images/icon.png"
    },
    "default_title": "__MSG_browserActionTitle__"
  },
  "content_scripts": [{
    "matches": [
      "https://github.com/*/*/commits/*"
    ],
    "css": [
      "styles/contentscript.css"
    ],
    "js": [
      "scripts/lib/jquery.min.js",
      "scripts/contentscript.js"
    ],
    "run_at": "document_end",
    "all_frames": false
  }],
  "permissions": [
    "contentSettings",
    "declarativeContent",
    "tabCapture",
    "tabs",
    "https://github.com/*"
  ]
}
